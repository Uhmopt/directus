{
  "name": "$t:user_updated",
  "version": "1.0.0",
  "types": ["user_updated"],
  "relation": "user_updated",
  "icon": "account_circle",
  "recommended": {
    "length": 10
  },
  "options": {
    "template": {
      "name": "$t:template",
      "comment": "$t:template_comment",
      "interface": "text-input",
      "default": "{{first_name}} {{last_name}}"
    },
    "display": {
      "name": "$t:display",
      "comment": "$t:display_comment",
      "interface": "dropdown",
      "default": "both",
      "options": {
        "choices": {
          "both": "$t:avatar + $t:name",
          "avatar": "$t:avatar",
          "name": "$t:name"
        }
      }
    }
  }
}
